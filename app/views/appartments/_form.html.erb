<%= form_with(model: @appartment, local: true  ) do |form| %>

  <div class="appartment_content">
    <div>
    <%= form.label :物件名 %>
    <%= form.text_field :name %>
    </div>
    <p>
    <%= form.label :賃料 %>
    <%= form.text_field :price %>
    </p>
    <p>
    <%= form.label :住所 %>
    <%= form.text_field :address %>
    </p>
    <p>
    <%= form.label :築年数 %>
    <%= form.text_field :age %>
    </p>
    <p>
    <%= form.label :備考 %>
    <%= form.text_field :remarks %>
    </p>
  </div>
<p>------------------------------------------------------------------------</p>
  
    <%= form.fields_for :stations do |stations_form| %>
        <p>
        <%= "最寄駅#{stations_form.index + 1}" %>
        </p>
        <p>
        <%= stations_form.label :路線 %>
        <%= stations_form.text_field :route %>
        </p>
        <p>
        <%= stations_form.label :駅名 %>
        <%= stations_form.text_field :station_name %>
        </p>
        <p>
        <%= stations_form.label :徒歩分数 %>
        <%= stations_form.text_field :time %>
        </p>
    <% end %>
  <%= form.submit %>
<% end %>

<%= link_to "一覧画面にもどる", appartments_path %>